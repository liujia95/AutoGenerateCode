<idea-plugin>
  <id>me.liujia95.generate.mvp.code</id>
  <name>MVP code</name>
  <version>1.0</version>
  <vendor email="liujia95@me.com" url="https://github.com/liujia95">LiuJia95</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
